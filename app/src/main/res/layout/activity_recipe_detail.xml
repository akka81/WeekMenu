<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RecipeDetailActivity" >



                    <ImageView
                        android:id="@+id/RecipeDetailImage"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="img"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/piattounico"/>

                    <ImageView
                        android:id="@+id/RecipeDetail_PleasImg"
                        android:layout_width="120dp"
                        android:layout_height="33dp"
                        android:layout_below="@id/RecipeDetailImage"
                        android:paddingLeft="2dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/stelle_0" />

                    <TextView
                        android:id="@+id/RecipeDetail_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_below="@id/RecipeDetail_PleasImg"
                        android:text="@string/recipe_descrlbl" />

                    <TextView
                        android:id="@+id/RecipeDetail_Type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/RecipeDetail_Name"
                        android:layout_marginBottom="15dp"
                        android:text="@string/recipe_descrlbl" />

                    <TextView
                        android:id="@+id/RecipeDetail_Time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/RecipeDetail_Type"
                        android:layout_marginBottom="15dp"
                        android:text="@string/recipe_descrlbl" />

                    <TextView
                        android:id="@+id/RecipeDetail_Descr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/RecipeDetail_Time"
                        android:layout_marginTop="15dp"
                        android:layout_alignParentLeft="true"
                        android:text="@string/recipe_descrlbl" />


                    <TextView
                        android:id="@+id/RecipeDetail_Ingredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/RecipeDetail_Descr"
                        android:text="@string/recipe_descrlbl" />


</RelativeLayout>
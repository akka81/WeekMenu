<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:minHeight="55dp"
    android:background="#E9E9E9">
    
    <ImageView
        android:id="@+id/recipe_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:contentDescription="img"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:src="@drawable/piattounico" />

     <TextView
        android:id="@+id/recipe_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/recipe_icon"
         android:textIsSelectable="false"
 		 android:textSize="18sp"
 		 android:textStyle="bold" />
    
     <ImageView
         android:id="@+id/pleasureIcon"
		 android:layout_width="120dp"
        android:layout_height="33dp"
         android:paddingLeft="5dp"
        android:paddingRight="5dp"
         android:scaleType="fitEnd"
        android:src="@drawable/stelle_0"
         android:layout_below="@+id/recipe_type"
         android:layout_alignParentRight="true"
         android:layout_alignParentEnd="true" />
     
     <TextView
        android:id="@+id/recipe_type"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/recipe_name"
         android:layout_toRightOf="@id/recipe_icon"
         android:paddingTop="8dp"
         />
    
</RelativeLayout>